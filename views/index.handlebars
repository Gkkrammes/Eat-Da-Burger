<h1>Eat-Da-Burger</h1>

<div class="container">
  <div>
    <form class="add-burger">
      <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="name">
        <button type="submit">Order Burger</button>
      </div>
    </form>
  </div>
  <div class='main'>
  <ul id='order'>
    <h2>Order Up!</h2>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-stop devoured=false}}
      {{/unless}}
      {{/each}}
  </ul>
  <ul id='devour'>
    <h2>Devoured Burgers!</h2>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-stop devoured=true}}
      {{/if}}
      {{/each}}
  </ul>
  </div>
</div>